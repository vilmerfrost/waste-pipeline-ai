# Collecct System Configuration

# Azure Blob Storage
AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=collecct;...
AZURE_FAILED_CONTAINER=failed-files
AZURE_PROCESSED_CONTAINER=processed-files

# Anthropic API (for extraction)
ANTHROPIC_API_KEY=your_api_key_here

# Processing Settings
BATCH_SIZE=10
CHECK_INTERVAL_SECONDS=300
CONFIDENCE_THRESHOLD=0.80

# Directories
WORK_DIR=/tmp/collecct/processing
REVIEW_DIR=/tmp/collecct/review
FAILED_DIR=/tmp/collecct/failed
PROCESSED_DIR=/tmp/collecct/processed

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Validation Rules
ALLOWED_WEIGHT_UNITS=kg
REQUIRED_FIELDS=weight_kg,address,waste_type,date
SUPPORTED_LANGUAGES=sv,fi,no,en

# Review Settings
AUTO_APPROVE_THRESHOLD=0.95
FLAG_FOR_REVIEW_THRESHOLD=0.80
